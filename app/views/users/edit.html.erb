<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: { multipart: true })  do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :picture %>
      
      <div class="row" style="text-align: center" >
        <div class="col-md-6 form-inline">
          
           
        </div>
        <div class="col-md-6">
          
        </div>
      </div>
      
      <div class="row" style="text-align: center">
        <div class="col-md-6">
          <p><em>Your uploaded picture:</em></p>
          <%= f.radio_button :use_gravatar, false %><br><br>
          <%= image_tag current_user.picture.url, size: "80", alt: "Plz upload" %>
          <span class="picture">
            <%= f.file_field :picture %>
          </span>
         
        </div>
      <!--class="gravatar_edit">-->
        <div class="col-md-6">
          <p><em>Your Gravatar picture: 
            
            </em></p>
          <%= f.radio_button :use_gravatar, true %><br><br>
          <%= image_tag gravatar_url @user %><br>
          <%= link_to "What's Gravatar?", "https://en.gravatar.com/support/what-is-gravatar/", target: "_blank" %><br>
          <a href="http://gravatar.com/emails" target="_blank">Change your Gravatar picture</a>
        </div>
        
      </div><br>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      
    <% end %>

    
  </div>
</div>