<h4 id="greeting">Hi <span id="name"></span>, welcome to the game!</h4>
<%= javascript_tag do %>
    $("body").attr("data-no-turbolink", "");
    <% if logged_in? %>
        var logged_in = true;
        $("#name").html("<%= current_user.name %>");
    <% else %>
        var logged_in = false;
        $("#name").html("there");
        $("#greeting").append("<br><em>To make your score recorded, please log in or sign up!");
        
    <% end %>
<% end %>